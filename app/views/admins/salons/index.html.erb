<%= render "shared/header_salon" %>
<div class="contents">
  <div class="section">
    <div class="customer_title">
      <p class="block_area"></p>
      <h1 class="title1 stylist_space">サロン情報一覧</h1>
    </div>
    <div class="stylist_display">
      <p class="stylist_area">
        <%= link_to "メニュー追加登録", new_admins_salon_path, class:"stylist_add" %>
      </p>
    </div>
    <div class="name_area">
      <p class="block_area"></p>
      <h2 class="basic">サロン情報</h2>
    </div>
   <table class="time_index_table" style="margin-bottom:30px;">
      <colgroup width="30%"></colgroup>
      <colgroup width="50%"></colgroup>
      <colgroup width="10%"></colgroup>
      <colgroup width="10%"></colgroup>
      <% @salons.each do |salon| %>
        <tr>
          <th class="show_name">営業時間</th>
          <td class="show_bd">
            <span class="show_field"><%= salon.start_time.strftime("%H時間%M分") %>
          </td>
          <td class="show_bd">
            <%= link_to "編集", edit_admins_salon_path(salon.id), class:"stylist_show" %>
          </td>
          <td class="show_bd">
            <%= link_to "削除", admins_salon_path(salon.id), method: :delete, id:"style_delete", class: "stylist_delete", data: { confirm: "本当に削除しますか？"} %>
          </td>
        </tr>
        <tr>
          <th class="show_name">終了時間</th>
          <td class="show_bd index_user_option_td">
            <span class="show_field"><%= salon.end_time.strftime("%H時間%M分") %></span>
          </td>
          <td class="show_bd">
            <%= link_to "編集",  edit_admins_salon_path(salon.id), class:"stylist_show" %>
          </td>
          <td class="show_bd">
            <%= link_to "削除", admins_salon_path(salon.id), method: :delete, id:"style_delete", class: "stylist_delete", data: { confirm: "本当に削除しますか？"} %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<%= render "shared/footer"%>