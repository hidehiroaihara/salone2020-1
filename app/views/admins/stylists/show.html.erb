<%= render "shared/header_stylist" %>
<div class="contents">
  <div class="section">
    <div class="customer_title">
      <p class="block_area"></p>
      <h1 class="title1 stylist_space">スタイリスト掲載情報登録</h1>
    </div>
      <table class="stylist_new_table" align="left">
        <tr>
          <th class="stylist_title">スタイリスト情報
            <p class="block_area"></p>
          </th>
        </tr>
        <tr>
          <td class="stylist_image">
            <div class="image_area">
              <%= image_tag @stylist.image, class: "stylist-img" if @stylist.image.attached? %> 
              <span class="image-size"><div id="image-list"></div></span>
            </div> 
          </td>
        </tr>
      </table>
      <table class="stylist_new_table1" style="float:left;margin-left:45px;">
        <colgroup width="15%"></colgroup>
        <colgroup width="10%"></colgroup>
        <colgroup width="10%"></colgroup>
        <colgroup width="15%"></colgroup>
        <colgroup width="10%"></colgroup>
        <colgroup width="10%"></colgroup>
        <tr>
          <th colspan="6" class="stylist_title">基本情報
            <p class="block_area"></p>
          </th>
        </tr>
        <tr class="stylist_tr">
          <th class="stylist_input_name">名前(漢字)</th>
          <td colspan="2" class="stylist_td">
            <span class="stylist_show_area"><%= @stylist.stylist_first_name.to_s + @stylist.stylist_last_name.to_s %></span>
          </td>
          <th class="stylist_input_name">名前(カナ)</th>
          <td colspan="2" class="stylist_td">
           <span class="stylist_show_area"><%= @stylist.stylist_first_name_cana.to_s + @stylist.stylist_last_name_cana.to_s %></span>
          </td>
        </tr>
        <tr class="stylist_tr">
          <th class="stylist_input_name">スタイリスト/<br>アシスタント</th>
          <td class="stylist_td" colspan="2">
            <span class="stylist_show_area"><%= @stylist.rank.name %></span>
          </td>
          <th class="stylist_input_name">性  別</th>
          <td colspan="2" class="stylist_td">
            <span class="stylist_show_area"><%= @stylist.gender.name %></span>
          </td>
        </tr>
      </table>
      <table class="stylist_new_table" align="left">
      </table>
      <table class="stylist_new_table2" style="float:left;margin-left:45px;margin-top:30px;">
        <colgroup width="15%"></colgroup>
        <colgroup width="50%"></colgroup>
        <colgroup width="5%"></colgroup>
        <tr>
          <th colspan="3" class="stylist_title">自己紹介
            <p class="block_area"></p>
          </th>
        </tr>
        <tr class="stylist_tr">
          <th class="stylist_input_name">キャッチ</th>
          <td colspan="2"class="stylist_td1">
            <span class="stylist_show_area"><%= @stylist.catchphrase %></span>
          </td>
        </tr>
        <tr>
          <th class="stylist_input_name">自己紹介</th>
          <td row="5" colspan="2" class="stylist_td1">
            <span class="stylist_show_area"><%= @stylist.self_introduction %></span>
          </td>
        </tr>
      </table>
      <table class="stylist_new_table" align="left">
      </table>
      <table class="stylist_new_table2" style="float:left;margin-left:45px;margin-top:30px;">
        <colgroup width="20%"></colgroup>
        <colgroup width="20%"></colgroup>
        <colgroup width="15%"></colgroup>
        <colgroup width="10%"></colgroup>
        <colgroup width="5%"></colgroup>
        <tr>
          <th colspan="5" class="stylist_title">詳細情報
            <p class="block_area"></p>
          </th>
        </tr>
        <tr class="stylist_tr">
          <th class="stylist_input_name">ステータス<br>(スタイリストのみ)</th>
          <td colspan="4" class="stylist_td1">
            <span class="stylist_show_area"><%= @stylist.stylist_detail.rank_text %></span>
          </td>
        </tr>
        <tr class="stylist_tr">
          <th class="stylist_input_name">スタイリスト歴</th>
          <td class="stylist_td1">
            <span class="stylist_show_area"><%= @stylist.stylist_detail.stylist_history.name %>
          </td>
          <th class="stylist_tr">指名</th>
          <td colspan="2" class="stylist_td1">
            <span class="stylist_show_area"><%= @stylist.stylist_detail.nomination.name %></span>
          </td>
        </tr>
        <tr class="stylist_tr">
          <th class="stylist_input_name">指名料</th>
          <td colspan="4" class="stylist_td1"><span class="en">￥</span>
            <span class="stylist_show_area"><%= @stylist.stylist_detail.nomination_price %></span><span class="en">(税込)</span>
          </td>
        </tr>
        <tr class="stylist_tr" style="height:80px;">
          <th class="stylist_input_name">得意なイメージ</th>
            <td colspan="4" class="stylist_td1">
              <% if @stylist.stylist_detail.style_type.nil? %>
                <span class="stylist_show_area"></span>
              <% else %>
                <span class="stylist_show_area"><%= @stylist.stylist_detail.style_type.name %></span>
              <% end %>
            </td>
        </tr>
        <tr class="stylist_tr" style="height:80px;">
          <th class="stylist_input_name">得意な技術</th>
          <td class="stylist_td1" colspan="4">
            <span class="stylist_show_area"><%= @stylist.stylist_detail.style_technique %></span>
          </td>
        </tr>
        <tr class="stylist_tr" style="height:80px;">
          <th class="stylist_input_name">趣味・マイブーム</th>
          <td colspan="4" class="stylist_td1">
            <span class="stylist_show_area"><%= @stylist.stylist_detail.hobby %></span>
          </td>
        </tr>
      </table>
      <table class="stylist_new_table3">
        <tr>
            <th colspan="6" class="stylist_title">ヘアースタイルリスト
              <p class="block_area"></p>
            </th>
        </tr>
      </table>
      <p class="img_all_area">
        <% if @stylist.portraits.attached? %>
          <% @stylist.portraits.each do |portrait| %>
            <%= image_tag portrait %>
          <% end %>
        <% end %>
      </p>
      <table style="width:100%;height:20px;margin-top:30px;">
        <tr>
          <td class="register_td">
            <ul class="stylist_show_edit_btn">
              <li>
                <%= link_to "変更", edit_admins_stylist_path(@stylist.id), method: :get, class:"show_space_area" %>
              </li>
            </ul>
          </td>
        </tr>
      </table>
  </div>
</div>
<%= render "shared/footer"%>