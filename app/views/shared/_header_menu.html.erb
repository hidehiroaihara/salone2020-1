<header class='top-page-header'>
  <div class="header" id="header-name"> 
    <div class="header-section">
      <p class="logo" id="logo">
       <%= link_to image_tag("salone-logo.png", class:"salone-icon"), "/" %>
      </p>     
      <div class="btn_area" id="bot-all">
        <ul class="shop_name_wrap">
          <li class="shop_area">ヘアサロン</li>
          <li class="shop_name">sample</li>
        </ul>
        <ul class="btn-all">
          <li><%= link_to "予約管理", admins_reservations_path, class:"management"%></li>
          <li><%= link_to "お客様管理", admins_users_path, class:"user-management"%></li>
