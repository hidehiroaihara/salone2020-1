        <ul class="column-all">
          <% if current_page?(controller: "admins/menus", action: "index") || current_page?(controller: "admins/menus", action: "new") || current_page?(controller: "admins/menus", action: "edit") || current_page?(controller: "admins/menus", action: "show") %>
            <li><%= link_to "メニュ一覧", admins_menus_path, class:"stylist_list1" %></li>
